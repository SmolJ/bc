<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:weightSum="1">


    <EditText
        android:id="@+id/Bfrom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kam"

        android:layout_marginTop="36dp"
        android:layout_below="@+id/tTo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/tTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Odkiaľ?"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/timePicker_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showTimePickerDialog"
        android:text="Čas"
        android:width="158sp"
        android:layout_alignBaseline="@+id/date_Picker_button"
        android:layout_alignBottom="@+id/date_Picker_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />




    <Button
        android:id="@+id/date_Picker_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showDatePickerDialog"
        android:width="158sp"
        android:text="Dátum"
        android:layout_below="@+id/Bfrom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp" />

    <Button
        android:id="@+id/find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/timePicker_button"
        android:onClick="RUN"
        android:text="Vyhľadať" />


</RelativeLayout>